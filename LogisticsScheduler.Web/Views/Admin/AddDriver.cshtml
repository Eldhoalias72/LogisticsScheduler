@model LogisticsScheduler.Data.Models.Driver
@{
    ViewBag.Title = "Add New Driver";
}

<div class="d-flex align-items-center mb-4">
    <a asp-action="Dashboard" class="btn btn-outline-secondary me-2">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
    <h2 class="mb-0">Add New Driver</h2>
</div>

<div class="card shadow-sm p-4">
    <h4 class="mb-3">🚗 Driver Details</h4>
    <form method="post" asp-action="AddDriver">

        <div class="mb-3">
            <label class="form-label">Driver Name *</label>
            <input type="text" name="Name" class="form-control" placeholder="Full name of driver" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Location *</label>
            <input type="text" name="Location" class="form-control" placeholder="Base location or operating area" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Vehicle Capacity *</label>
            <input type="number" name="VehicleCapacity" class="form-control" min="1" placeholder="Capacity in kg or units" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Username *</label>
            <input type="text" name="Username" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Password *</label>
            <input type="password" name="Password" class="form-control" required />

        </div>
        <div class="form-check form-switch mb-3">
            <input class="form-check-input" type="checkbox" name="IsAvailable" value="true" checked />
            <label class="form-check-label">Available for jobs</label>
        </div>


        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-person-plus"></i> Add Driver
            </button>
            <button type="reset" class="btn btn-outline-secondary">Clear Form</button>
        </div>
    </form>
</div>
